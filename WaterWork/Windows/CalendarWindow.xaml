<Window x:Class="WaterWork.Windows.CalendarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WaterWork.Windows"
        mc:Ignorable="d"
        Title="Naptár nézet" ResizeMode="NoResize" Topmost="True" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight" Background="#FF434343" Foreground="White" FontSize="14">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="14" />
        </Style>
    </Window.Resources>
    
    <Grid x:Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="5"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="5"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="chosenDateLabel" Grid.Column="3" Grid.ColumnSpan="3" Grid.Row="1" HorizontalAlignment="Center"/>

        <Calendar x:Name="mainCalendar" Grid.Column="1" Grid.Row="1" Grid.RowSpan="11" VerticalAlignment="Center" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Foreground="White" Background="#FFC9C9C9" SelectedDatesChanged="MainCalendar_SelectedDatesChanged"/>

        <Label Content="Kezdés: " Grid.Column="3" Grid.Row="3"/>
        <Label Content="Zárás: " Grid.Column="3" Grid.Row="5"/>
        <Label Content="Ebédszünet: " Grid.Column="3" Grid.Row="7"/>
        <Label Content="Egyéb szünet: " Grid.Column="3" Grid.Row="9"/>
        <Label Content="Ledolgozott órák: " Grid.Column="3" Grid.Row="11"/>
        
        <Label x:Name="startTimeLabel" Grid.Column="5" Grid.Row="3"/>
        <Label x:Name="endTimeLabel" Grid.Column="5" Grid.Row="5"/>
        <Label x:Name="lunchBreakTimeLabel" Grid.Column="5" Grid.Row="7"/>
        <Label x:Name="otherBreakTimeLabel" Grid.Column="5" Grid.Row="9"/>

        <Separator Grid.Column="3" Grid.ColumnSpan="3" Grid.Row="10"/>

        <Label x:Name="workedTimeLabel" Grid.Column="5" Grid.Row="11" FontWeight="Bold"/>
    </Grid>
</Window>
